# Office Manager API Configuration
# Copy this file to .env and fill in your values

# Database (PostgreSQL required)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/office_manager

# Redis (required for Celery)
REDIS_URL=redis://localhost:6379/0

# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-in-production-at-least-32-chars

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI (for AI features like summarization and Q&A)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Microsoft Graph API (for Outlook email integration)
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-client-secret
MICROSOFT_TENANT_ID=your-azure-tenant-id

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Telegram Bot (for Telegram integration)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhooks/telegram
